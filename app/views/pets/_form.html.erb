<%= form_for @pet do |f| %>
  <div class="form-group">
    <%= f.text_field :name, class: "form-control", placeholder: "Name", autofocus: true, required: true, minlength: 3 %>
  </div>
  <div class="form-group">
    <%= f.text_area :breed, class: "form-control", placeholder: "Breed", required: true %>
  </div>
  <div class="form-group">
    <%= f.submit "Save Pet", class: "btn btn-block btn-default" %>
  </div>
<% end %>