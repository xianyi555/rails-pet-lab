<h2>pet _form partial</h2>
<p>Find me in app/views/pets/_form.html.erb</p>
<%= form_for [@owner, @pet] do |f| %>
  <div class="form-group">
    <%= f.text_field :name, class: "form-control", placeholder: "Pet Name", autofocus: true %>
  </div>
  <div class="form-group">
    <%= f.text_field :breed, class: "form-control", placeholder: "Breed" %>
  </div>
  <div class="form-group">
    <%= f.submit "Save Pet", class: "btn btn-block btn-success" %>
  </div>
<% end %>
